@using OnlineSurveyApp.EntityLayer.Entities
@model List<Test>

@{
    ViewData["Title"] = "TestList";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<section class="py-5">
    <div class="container px-5 mb-5">
        <div class="text-center mb-5">
            <h5 class="display-12 fw-bolder mb-0"><span class="text-gradient d-inline">Oluşturduğum testler</span></h5>
        </div>

        <table class="table">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Sil</th>
                    <th scope="col">Skor</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@item.ID</th>
                        <td><a href="/Profile/DeleteTest/@item.ID" class="btn btn-danger btn-sm">Sil</a></td>
                        <td><a href="/Profile/ScoreTable/@item.ID"  class="btn btn-primary btn-sm">Skor</a></td>
                    </tr>
                }


            </tbody>
        </table>
        <br>

    </div>
</section>