@using OnlineSurveyApp.EntityLayer.Entities;
@model List<Answer>

<br />
<small>Doğru cevabı işaretleyiniz</small>
<br />
<br />
<ul class="list-group">
    @for (int i = 0; i < Model.Count; i++)
    {
        <li class="list-group-item">
            <div class="form-check">
                <input class="form-check-input" type="radio" name="CorrectAnswer" value="@Model[i].ID" id="radio@i">
                <label class="form-check-label" for="radio@i">
                    @Model[i].Text
                </label>
            </div>
        </li>
    }
</ul>
