@model TestQuestionViewModel

@{
    ViewData["Title"] = "Test";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<section class="py-5">
    <div class="container px-5 mb-5">
        <div class="text-center mb-5">
            <h5 class="display-12 fw-bolder mb-0"><span class="text-gradient d-inline"> @ViewBag.UserName @ViewBag.GuestName 'ın testi</span></h5>
        </div>

        <div class="text-center">
            <p>Soru : @(Model.CurrentQuestionNumber + 1)</p>
        </div>

        <div class="row gx-5 justify-content-center">
            <div class="col-lg-11 col-xl-9 col-xxl-8">
                <div class="card overflow-hidden shadow rounded-4 border-0 mb-5">
                    <div class="card-body p-0">
                        <div class="p-5">
                            <form method="post" action="/Start/Test/@Model.TestId">
                                <h5>@Model.Questions[0].Text</h5>
                                <br />
                                <small>Doğru cevabı işaretleyiniz</small>
                                <br />
                                <br />
                                <ul class="list-group">
                                    @for (var j = 0; j < Model.Answers.Count; j++)
                                    {
                                        var answer = Model.Answers[j];
                                        <li class="list-group-item">
                                            <div class="form-check">
                                                <input class="form-check-input" type="radio" name="SelectedAnswer" value="@answer.ID" id="radio@(j)">
                                                <label class="form-check-label" for="radio@(j)">@answer.Text</label>
                                            </div>
                                        </li>
                                    }
                                </ul>

                                <input type="hidden" name="CorrectAnswerId" value="@Model.CorrectAnswerId">

                                <input type="hidden" name="TestId" value="@Model.TestId">

                                <input type="hidden" name="QuestionId" value="@Model.Questions[0].ID">

                                <div class="d-grid col-6 mx-auto mt-5">
                                    <button type="submit" class="btn btn-primary">İleri</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
